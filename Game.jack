class Game {
    field int hackToStopMemoryAllocationError;

    constructor Game new() {
        return this;
    }

    method void dispose() {
        do Memory.deAlloc(this);
        return;
    }

    method void run() {
        var char key;
        var boolean quit;
        do Menu.showMainMenu();
        let quit = false;
        while (~quit) {
            let key = Game.waitForKeyPressed();
            if (key = 81)  { let quit = true; }     // q key
            do Game.waitForKeyReleased(key);
        }
        do Menu.showFarewellMessage();
        return;
    }

    function char waitForKeyPressed() {
        var char key;
        let key = 0;
        while (key = 0) {
            let key = Keyboard.keyPressed();
        }
        return key;
    }

    function void waitForKeyReleased(char key) {
        while (~(key = 0)) {
            let key = Keyboard.keyPressed();
        }
        return;
    }
}